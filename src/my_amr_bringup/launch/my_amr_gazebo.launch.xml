<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share my_amr_description)/urdf/my_amr.urdf.xacro" />
    <let name="rviz_config_path"
         value="$(find-pkg-share my_amr_bringup)/rviz/rviz_config.rviz" />
    <let name="slam_config_path"
         value="$(find-pkg-share my_amr_bringup)/config/mapper_params_online_async.yaml" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
          <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
          <arg name="world" value="$(find-pkg-share my_amr_bringup)/worlds/demo_world.world"/>
    </include>

    <node pkg="gazebo_ros" exec="spawn_entity.py"
          args="-topic robot_description -entity my_amr" />

    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />

    <include file="$(find-pkg-share slam_toolbox)/launch/online_async_launch.py">
          <arg name="params_file" value="$(var slam_config_path)"/>
          <arg name="use_sim_time" value="true"/>
    </include>

</launch>